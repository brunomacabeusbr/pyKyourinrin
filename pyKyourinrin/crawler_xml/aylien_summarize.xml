<crawler>
    <primitive_required>
        <primitive type_requirement="harvest">news</primitive>
    </primitive_required>

    <database>
        <table_main>

        </table_main>

        <table_secondary>
            <name>sentences</name>
            <column>
                <name>text</name>
                <type>TEXT</type>
            </column>
        </table_secondary>

        <macro_at_data>
            <name>key_sentences</name>
        </macro_at_data>
    </database>

    <dependencies>
        <route>
            <dependence>title</dependence>
            <dependence>article</dependence>
        </route>
    </dependencies>

    <crop>
        <info>key_sentences</info>
    </crop>

    <harvest>
        <url></url>
        <param_additional>total_sentences</param_additional>
    </harvest>
</crawler>