<crawler>
    <primitive_required>
        <primitive type_requirement="harvest">person</primitive>
        <primitive type_requirement="harvest">firm</primitive>
    </primitive_required>

    <database>
        <table_main>

        </table_main>

        <table_secondary>
            <name>debt</name>
            <column>
                <name>inscription_number</name>
                <type>TEXT</type>
            </column>
            <column>
                <name>value</name>
                <type>FLOAT</type>
            </column>
            <column>
                <name>type</name>
                <type>TEXT</type>
            </column>
        </table_secondary>

        <macro_at_data>
            <name>pgfn_debt_total</name>
        </macro_at_data>
    </database>

    <dependencies>
        <route>
            <dependence>name</dependence>
        </route>
        <route>
            <dependence>cpf</dependence>
        </route>
        <route>
            <dependence>cnpj</dependence>
        </route>
        <route>
            <dependence>razao_social</dependence>
        </route>
    </dependencies>

    <crop>
        <info>name</info>
        <info>cpf</info>
        <info>cnpj</info>
        <info>razao_social</info>
        <info>pgfn_debt_total</info>
    </crop>

    <harvest>
        <url>https://www2.pgfn.fazenda.gov.br/ecac/contribuinte/devedores/listaDevedores.jsf</url>
    </harvest>
</crawler>