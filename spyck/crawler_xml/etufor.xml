    <database>
        <table_main>
            <column>
                <name>cia</name>
                <type>INTEGER</type>
            </column>
        </table_main>

        <table_secondary>
            <name>records_school</name>
            <column>
                <name>timestamp</name>
                <type>TEXT</type>
            </column>
            <column>
                <name>school</name>
                <entity>firm</entity>
            </column>
            <column>
                <name>course</name>
                <type>TEXT</type>
            </column>
            <column>
